<mvc:View
  controllerName="starwarsfrontend.controller.Master"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  displayBlock="true">

  <Page title="Catálogo">

    <VBox class="sapUiMediumMargin">
      <!-- Lista de Categorías -->
      <SearchField id="SearchBar" search="onSearchRequested"></SearchField>
      <Button text="todos los items" press="onShowCatalog"></Button>
      <List
        id="categoriesList"
        headerText="Categorías"
        items="{
          path: '/Categories',
          parameters: { expand: 'subcategories' }
        }"
        mode="SingleSelectMaster"
        itemPress="onCategorySelect">

        <StandardListItem type="Active" title="{name}" />
      </List>

      <!-- Lista de Subcategorías -->
      <List
        id="subcategoryList"
        headerText="Subcategorías"
        items="{ path : '/Subcategories' ,parameters : {expand:'category'}}"
        visible="true"
        mode="SingleSelectMaster"
        itemPress="onSubcategorySelect">

        <StandardListItem type="Active" title="{name}" />
      </List>
    </VBox>

  </Page>
</mvc:View>




