<mvc:View
    controllerName="starwarsfrontend.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
>
    <Page title="Catálogo">
        <VBox class="sapUiMediumMargin">
            <!-- Barra de búsqueda -->
            <SearchField
                id="SearchBar"
                search="onSearchRequested"
                class="sapUiSmallMarginTop"
            />

            <!-- Menú lateral de acceso rápido -->

            <!-- Lista de Categorías -->
            <List
                id="categoriesList"
                headerText="Categorías"
                items="{
          path: '/Categories',
          parameters: { expand: 'subcategories' }
        }"
                mode="SingleSelectMaster"
                itemPress="onCategorySelect"
                class="sapUiSmallMarginTop"
            >
                <StandardListItem
                    type="Active"
                    title="{name}"
                />
            </List>

            <!-- Lista de Subcategorías -->
            <List
                id="subcategoryList"
                headerText="Subcategorías"
                items="{
          path: '/Subcategories',
          parameters: { expand: 'category' }
        }"
                visible="true"
                mode="SingleSelectMaster"
                itemPress="onSubcategorySelect"
                class="sapUiSmallMarginTop"
            >
                <StandardListItem
                    type="Active"
                    title="{name}"
                />
            </List>

            <VBox id="authContent2">
                <FlexBox
                    direction="Column"
                    justifyContent="Center"
                    alignItems="Center"
                    class="sapUiSmallMarginEnd"
                >
                    <Panel
                        headerText="Menú de acceso rápido"
                        expandable="false"
                        class="sapUiTinyMargin"
                    >
                        <List>
                            <StandardListItem
                                title="Perfil"
                                type="Active"
                                press=".onPressProfile"
                                icon="sap-icon://employee"
                            />

                            <StandardListItem
                                title="Catálogo"
                                type="Active"
                                press=".onPressCatalog"
                                icon="sap-icon://contacts"
                            />
                            <StandardListItem
                                title="Carrito"
                                type="Active"
                                press=".onPressCart"
                                icon="sap-icon://cart"
                            />
                            <StandardListItem
                                title="Favoritos"
                                type="Active"
                                press=".onPressFavorites"
                                icon="sap-icon://favorite"
                            />
                            <StandardListItem
                                title="Historial"
                                type="Active"
                                press=".onPressHistory"
                                icon="sap-icon://history"
                            />
                            <StandardListItem
                                title="deslogearte"
                                type="Active"
                                press=".onLogOut"
                                icon="sap-icon://employee"
                            />
                        </List>
                    </Panel>
                </FlexBox>
            </VBox>
        </VBox>
    </Page>
</mvc:View>
