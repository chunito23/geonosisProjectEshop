<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="starwarsfrontend.controller.Master"
>
    <Page title="Test Expand">
        <List
            items="{ 
            path: '/Categories' , 
            parameters: {expand : 'subcategories'}
            }"
        >
            <CustomListItem>
            <Text text="{id}"></Text>
                <List items= "{ path: 'subcategories' , parameters:{expand:'category'}}">
                    <CustomListItem press="onItemPress" type="Active">
                        <VBox>
                            <Text text="{id}" />
                            <Text text="{name}" />
                            <Text text="{category/id}" />
                        </VBox>
                    </CustomListItem>
                </List>
            </CustomListItem>
        </List>
    </Page>
</mvc:View>
