<mvc:View
    controllerName="starwarsfrontend.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
>
    <Page title="{i18n>masterPageTitle}">
        <VBox class="sapUiMediumMargin">
            <VBox id="authContent2">
                <FlexBox
                    direction="Column"
                    justifyContent="Center"
                    alignItems="Center"
                    class="sapUiSmallMarginEnd"
                >
                    <Panel
                        headerText="{i18n>quickAccessMenu}"
                        expandable="false"
                        class="sapUiTinyMargin"
                    >
                        <List>
                            <StandardListItem
                                id="userBotton"
                                title="{i18n>profile}"
                                type="Active"
                                press=".onPressProfile"
                                icon="sap-icon://employee"
                            />
                            <StandardListItem
                                title="{i18n>catalog}"
                                type="Active"
                                press=".onPressCatalog"
                                icon="sap-icon://contacts"
                            />
                            <StandardListItem
                                title="{i18n>cart}"
                                type="Active"
                                press=".onPressCart"
                                icon="sap-icon://cart"
                            />
                            <StandardListItem
                                title="{i18n>favorites}"
                                type="Active"
                                press=".onPressFavorites"
                                icon="sap-icon://favorite"
                            />
                            <StandardListItem
                                title="{i18n>history}"
                                type="Active"
                                press=".onPressHistory"
                                icon="sap-icon://history"
                            />
                            <StandardListItem
                                title="{i18n>logout}"
                                type="Active"
                                press=".onLogOut"
                                icon="sap-icon://log"
                            />
                            <CustomListItem visible="{viewModel>/mostrarSeccion}">
                                <SearchField
                                    id="SearchBar"
                                    search="onSearchRequested"
                                    class="sapUiSmallMarginTop"
                                />
                            </CustomListItem>
                            <CustomListItem>
                                <List
                                    id="categoriesList"
                                    headerText="{i18n>categories}"
                                    items="{
                                        path: '/Categories',
                                        parameters: { expand: 'subcategories' }
                                    }"
                                    mode="SingleSelectMaster"
                                    visible="{viewModel>/mostrarSeccion}"
                                    itemPress="onCategorySelect"
                                    class="sapUiSmallMarginTop"
                                >
                                    <StandardListItem
                                        type="Active"
                                        title="{name}"
                                    />
                                </List>
                            </CustomListItem>
                            <CustomListItem>
                                <List
                                    id="subcategoryList"
                                    headerText="{i18n>subcategories}"
                                    items="{
                                        path: '/Subcategories',
                                        parameters: { expand: 'category' }
                                    }"
                                    visible="{viewModel>/mostrarSeccion}"
                                    mode="SingleSelectMaster"
                                    itemPress="onSubcategorySelect"
                                    class="sapUiSmallMarginTop"
                                >
                                    <StandardListItem
                                        type="Active"
                                        title="{name}"
                                    />
                                </List>
                            </CustomListItem>
                        </List>
                    </Panel>
                </FlexBox>
            </VBox>
        </VBox>
    </Page>
</mvc:View>