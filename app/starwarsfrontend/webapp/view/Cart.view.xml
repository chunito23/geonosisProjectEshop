<mvc:View
    controllerName="starwarsfrontend.controller.Cart"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        title="Mis Favoritos"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <content>
            <List
                headerText="Tus favoritos"
                items="{
                    path: 'favorites>/'
                }"
            >
                <StandardListItem
                    title="{favorites>product/name}"
                    description="{= 'Precio: $' + ${favorites>product/price} }"
                    icon="{favorites>product/image}"
                />
            </List>
            <Text text="carrito"></Text>
            <List
                id = "cartItemsList"
                headerText="Tu carrito"
                items="{
                    path: 'cartItems>/'
                }"
            >
                <CustomListItem >
                <Text text="{cartItems>product/name}"></Text>
                <Text text="{cartItems>product/id}"></Text>
                <Image src="{cartItems>product/image}"></Image>
                <Button text="x" press="onDeleteCartItem"></Button>
                    
                </CustomListItem>
            </List>
        </content>
    </Page>
</mvc:View>
